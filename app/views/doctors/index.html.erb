<h1 align="center">Doctor List</h1>
<h4><%= link_to "Back" ,:back %></h4>
<h4><%= link_to "Exit" ,root_path %></h4>
<h4><%= link_to "Add Doctor" ,new_doctor_path %></h4>
<table align="center" border="">
	<tr>
		<th>Name</th>
		<th>Speciality</th>
		<th colspan="3">Action</th>
	</tr>	
	<tr>
		<% @doctors.each do |doctor| %>
			<td><%= doctor.name %></td>
			<td><%= raw(doctor.speciality) %></td>
			<td><%= link_to "Show",doctor_path(doctor) %></td>
			<td><%= link_to "Edit", edit_doctor_path(doctor) %></td>
			<td><%= link_to "Delete" ,{ action: :destroy ,id: doctor}, method: :delete, data: {confirm: 'Are you sure?'}  %></td>
	</tr>
		<%end%>
</table>