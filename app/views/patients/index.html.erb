<h1 align="center">Patients List</h1>
<h4><%= link_to "Back" ,:back %></h4>
<h4><%= link_to "Exit" ,root_path %></h4>
<h4><%= link_to "Add Patient" ,new_patient_path %></h4>
<table align="center" border="">
	<tr>
		<th>Name</th>
		<th>Address</th>
		<th colspan="3">Action</th>
	</tr>	
	<tr>
		<% @patients.each do |patient| %>
		<td><%= patient.name %></td>
		<td><%= raw(patient.address) %></td>
		<td><%= link_to "Show" ,patient_path(patient) %></td>
		<td><%= link_to "Edit" ,edit_patient_path(patient) %></td>
		<td><%= link_to "Delete" ,{ action: :destroy, id: patient}, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
		<%end%>
</table>