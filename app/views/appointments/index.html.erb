<h1 align="center">Appointments List</h1>
<h4><%= link_to "Back" ,:back %></h4>
<h4><%= link_to "Exit" ,root_path %></h4>
<h4><%= link_to "Create Appointment" ,new_appointment_path %></h4>
<table align="center" border="">
	<tr>
		<th>Doctor</th>
		<th>Patient</th>
		<th>Appointment_Date</th>
		<th colspan="3">Action</th>
	</tr>	
	<tr>
		<% @appointments.each do |appointment| %>
			<td><%= appointment.doctor.name %></td>
			<td><%= appointment.patient.name %></td>
			<td><%= appointment.date %></td>
			<td><%= link_to "Show", appointment_path(appointment) %></td>
			<td><%= link_to "Edit", edit_appointment_path(appointment) %></td>
			<td><%= link_to "Delete",{action: :destroy, id: appointment}, method: :delete, data: {confirm: 'Are you sure?'} %></td>
	</tr>
		<%end%>
</table>