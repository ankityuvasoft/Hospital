<%= simple_form_for @entry, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :username %>
  <%= error_span(@entry[:username]) %>
  <%= f.input :password %>
  <%= error_span(@entry[:password]) %>
  <%= f.input :email %>
  <%= error_span(@entry[:email]) %>
  <%= f.input :description %>
  <%= error_span(@entry[:description]) %>
  <%= f.input :gender %>
  <%= error_span(@entry[:gender]) %>
  <%= f.input :remember_me %>
  <%= error_span(@entry[:remember_me]) %>
  <%= f.input :age %>
  <%= error_span(@entry[:age]) %>
  <%= f.input :avatar_file_name %>
  <%= error_span(@entry[:avatar_file_name]) %>
  <%= f.input :avatar_content_type %>
  <%= error_span(@entry[:avatar_content_type]) %>
  <%= f.input :avatar_file_size %>
  <%= error_span(@entry[:avatar_file_size]) %>
  <%= f.input :avatar_updated_at %>
  <%= error_span(@entry[:avatar_updated_at]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                entries_path, :class => 'btn btn-default' %>
<% end %>
